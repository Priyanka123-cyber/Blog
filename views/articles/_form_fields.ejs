<div class="form-group">
    <label for="title">Title</label>
    <input required type="text" name="title" value="<%=article.title%>"  id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" value="<%=article.description%>" class="form-control"></textarea>
</div>
<div class="form-group"></div>
    <label for="markdown">Post Content</label>
    <textarea required name="markdown" id="markdown" value="<%=article.markdown%>" class="form-control"></textarea>
</div>
<a href="/" class="btn btn-secondary">Cancel</a>
  <button type="submit" class="btn btn-primary">Save</button>